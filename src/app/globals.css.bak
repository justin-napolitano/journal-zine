/* app/globals.css */

:root {
  color-scheme: light;
  --bg: #faf6f0;
  --ink: #171412;
  --muted: #7e746b;
  --border: #e0d5c7;
  --accent: #c05a2b;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

html,
body {
  padding: 0;
  margin: 0;
}

body {
  min-height: 100vh;
  background: var(--bg);
  color: var(--ink);
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "SF Pro Text",
    "Helvetica Neue", Arial, sans-serif;
}

/* Main page container */
.main-shell {
  max-width: 720px;
  margin: 0 auto;
  padding: 2.5rem 1.5rem 4rem;
}

/* Header */
.site-heading {
  font-size: 1.5rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  margin-bottom: 0.25rem;
}

.site-subtitle {
  font-size: 0.9rem;
  color: var(--muted);
  margin-bottom: 2rem;
}

/* Composer */
.composer-card {
  border-top: 1px solid var(--border);
  border-bottom: 1px solid var(--border);
  padding: 1rem 1rem 1.25rem;
  margin: 0 auto 2rem;
  max-width: 540px; /* match post-card width */
}

.composer-textarea {
  width: 100%;
  border: none;
  resize: none;
  min-height: 40px;
  background: transparent;
  font: inherit;
  color: inherit;
  margin-bottom: 0.5rem;
  outline: none;
}

.composer-footer {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  justify-content: space-between;
  flex-wrap: wrap;
}

.composer-left {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  flex-wrap: wrap;
}

.composer-file-label {
  font-size: 0.8rem;
  color: var(--muted);
  cursor: pointer;
}

.composer-file-input {
  display: none;
}

.composer-meta {
  font-size: 0.75rem;
  color: var(--muted);
}

.btn-primary {
  border: 1px solid transparent;
  background: var(--ink);
  color: var(--bg);
  padding: 0.4rem 0.9rem;
  font-size: 0.8rem;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  border-radius: 999px;
  cursor: pointer;
}

.btn-primary:disabled {
  opacity: 0.4;
  cursor: default;
}

/* Feed layout */
.feed {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Post card – fixed-ish height, centered */
.post-card {
  max-width: 540px;
  margin: 0 auto;
  border-radius: 18px;
  padding: 1rem 1rem 0.75rem;
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid var(--border);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);

  display: flex;
  flex-direction: column;
  /* media height + caption + meta + padding → keeps cards visually equal */
  min-height: 460px;
}

/* Shared media block – EXACT same size for photo + text posts */
.post-media {
  width: 100%;
  max-width: 100%;
  border-radius: 16px;
  overflow: hidden;
  background: #f3ebe1;
  position: relative;

  /* key: fixed height */
  height: 320px;
  flex: 0 0 auto;
}

/* On wider screens, let it grow slightly */
@media (min-width: 900px) {
  .post-media {
    height: 360px;
  }
}

/* Photo fills the entire box */
.post-image {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Text-only: fill the same box and center the text */
.post-media-text {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1.5rem;
  width: 100%;
  height: 100%;
  text-align: center;
}

/* Text inside the media box */
.post-body {
  margin: 0;
  white-space: pre-wrap;
  line-height: 1.5;
  font-size: 0.95rem;
}

/* Caption row – single line, fixed height for all cards */
.post-caption {
  margin-top: 0.75rem;
  font-size: 0.95rem;
  line-height: 1.4;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 1.4em; /* ensures same height even if empty */
}

/* Meta row */
.post-meta {
  margin-top: 0.5rem;
  font-size: 0.75rem;
  color: var(--muted);
}

/* Hashtags (both body + caption) */
.post-body a.hashtag,
.post-caption a.hashtag {
  color: var(--accent);
  text-decoration: none;
}

/* Infinite scroll sentinel */
.sentinel {
  height: 1px;
}

/* Small-screen tweaks */
@media (max-width: 640px) {
  .main-shell {
    padding: 1.5rem 0.75rem 3rem;
  }

  .post-card {
    max-width: 100%;
    border-radius: 0;
    padding: 0.75rem 0.75rem 0.5rem;
    box-shadow: none;
    border-left: none;
    border-right: none;
    min-height: 430px;
  }

  .post-media {
    border-radius: 12px;
    height: 300px;
  }
}

